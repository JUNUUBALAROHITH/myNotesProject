	margin: 150px 150px 100px 150px;
	padding: 10px;
	border-radius: 25px;
	-webkit-box-shadow: 10px 10px 31px 0 rgb(0 0 0 / 80%);
	-moz-box-shadow: 10px 10px 31px 0 rgba(0, 0, 0, 0.8);
	box-shadow: 10px 10px 31px 0 rgb(0 0 0 / 80%);
	background-color: rgba(255, 255, 255, 0.1);
	backdrop-filter: blur(5px);
}
h1,
p,
a {
	color: white;
}

